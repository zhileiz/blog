<% provide(:page_title, @post.title) %>
<% provide(:blog_active, 'active') %>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-sm-center">
    <h1><%= @post.title%></h1>
    <p>
      <%= @post.display_day_published %>
    </p>
    <%= @post.body %>
    <div>
      <%= link_to 'Edit', edit_post_path(@post), class:'btn btn-read' %> |
      <%= link_to 'Back', posts_path, class:'btn' %>
    </div>
  </div>
</div>
